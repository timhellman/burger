<div class="jumbotron">
<h1 id="pageheader" style="text-align: center">EAT DA BURGER!</h1>  
</div>

<div class="row">
  <div class="col-6" style="text-align:center">
<h2 class="burger-header">Burgers that are not devoured!</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <h3 class="displayed-burgers">{{burger_name}}</h3>
      <button class="devour-button" data-id={{id}}>DEVOUR!</button>
    {{/unless}}
  {{/each}}
</ul>

  </div>
  <div class="col-6" style="text-align:center">
<h2 class="burger-header">Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <h3 class="displayed-burgers">{{burger_name}}</h3>
    {{/if}}
  {{/each}}
</ul>
  </div>
</div>

<div style="text-align: center">
<h2 class="burger-header">Add a Burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burgerInput" name="name">
  </div>

  <button class="burger-button" type="submit">ADD BURGER!</button>
</form>
</div>

